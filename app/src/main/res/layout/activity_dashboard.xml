<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="UNIVERSITY DIRECTORY"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

    <!-- Search bar for faculty -->
    <EditText
        android:id="@+id/etFacultySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="Search faculty by name"
        android:inputType="textPersonName"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:padding="14dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_search_24"
        android:drawableTint="#666666"
        android:drawablePadding="10dp"
        android:textColorHint="#888888" />

    <!-- Optional filters chips row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/chipsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="All"
                android:textColor="#1E88E5"
                android:textSize="13sp"
                android:textStyle="bold"
                app:strokeColor="#1E88E5"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipMyDepartments"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="My Departments"
                android:textColor="#43A047"
                android:textSize="13sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_person"
                app:iconTint="#43A047"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:strokeColor="#43A047"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipFavorites"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textColor="#E53935"
                android:textSize="13sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_star_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:strokeColor="#E53935"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Departments header -->
    <TextView
        android:id="@+id/tvDepartmentsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:text="DEPARTMENTS"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Departments grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDepartments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:nestedScrollingEnabled="false" />

    

    <!-- Faculty list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaculty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:nestedScrollingEnabled="true" />

</LinearLayout>


